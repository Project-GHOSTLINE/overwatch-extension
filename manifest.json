{
  "manifest_version": 3,
  "name": "Overwatch v7 - PRODUCTION",
  "version": "7.0.0",
  "description": "Capture Flinks/Inverite/Margill et envoie au dashboard FricTrak",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://www.frictrak.ca/*",
    "https://frictrak.ca/*",
    "https://frictrak.vercel.app/*",
    "https://*.vercel.app/*",
    "https://frictrak-production.up.railway.app/*",
    "https://*.railway.app/*",
    "https://dashboard.flinks.com/*",
    "*://inverite.com/*",
    "*://*.inverite.com/*",
    "https://argentrapide.margill.com/*",
    "*://*.margill.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://dashboard.flinks.com/*",
        "*://inverite.com/*",
        "*://*.inverite.com/*",
        "https://argentrapide.margill.com/*",
        "*://*.margill.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
